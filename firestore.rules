rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - each user can only read/write their own data
    match /users/{userId} {
      // Users can read and write their own user document
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Pottery subcollection - users can only access their own pottery items
      match /pottery/{potteryId} {
        // User must be authenticated and the userId must match
        allow read, write: if request.auth != null && request.auth.uid == userId;
        
        // Additional validation for writes
        allow create: if request.auth != null 
                      && request.auth.uid == userId
                      && request.resource.data.keys().hasAll(['potName', 'clayType', 'dateCreated', 'designType', 'potStatus', 'glazeType'])
                      && request.resource.data.potName is string
                      && request.resource.data.potName.size() > 0
                      && request.resource.data.potName.size() <= 100
                      && request.resource.data.clayType is string
                      && request.resource.data.dateCreated is string
                      && request.resource.data.designType is string
                      && request.resource.data.potStatus is string
                      && request.resource.data.glazeType is string
                      && (!request.resource.data.keys().hasAny(['imageUri']) || (request.resource.data.imageUri is string && request.resource.data.imageUri.size() <= 2048))
                      && (!request.resource.data.keys().hasAny(['notificationId']) || request.resource.data.notificationId is string)
                      && (!request.resource.data.keys().hasAny(['timerDays']) || (request.resource.data.timerDays is number && request.resource.data.timerDays >= 1 && request.resource.data.timerDays <= 3))
                      && (!request.resource.data.keys().hasAny(['timerStartDate']) || request.resource.data.timerStartDate is string);
        
        allow update: if request.auth != null 
                      && request.auth.uid == userId
                      && request.resource.data.keys().hasAll(['potName', 'clayType', 'dateCreated', 'designType', 'potStatus', 'glazeType'])
                      && request.resource.data.potName is string
                      && request.resource.data.potName.size() > 0
                      && request.resource.data.potName.size() <= 100
                      && (!request.resource.data.keys().hasAny(['imageUri']) || (request.resource.data.imageUri is string && request.resource.data.imageUri.size() <= 2048))
                      && (!request.resource.data.keys().hasAny(['notificationId']) || request.resource.data.notificationId is string)
                      && (!request.resource.data.keys().hasAny(['timerDays']) || (request.resource.data.timerDays is number && request.resource.data.timerDays >= 1 && request.resource.data.timerDays <= 3))
                      && (!request.resource.data.keys().hasAny(['timerStartDate']) || request.resource.data.timerStartDate is string);
        
        allow delete: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

