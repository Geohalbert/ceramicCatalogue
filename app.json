{
  "expo": {
    "name": "ceramicCatalogue",
    "slug": "ceramicCatalogue",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/home_screen_vase_cropped_300w.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "ceramiccatalogue",
    "splash": {
      "image": "./assets/home_screen_vase_cropped_300w.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ceramiccatalogue.app",
      "infoPlist": {
        "UIBackgroundModes": ["remote-notification"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.ceramiccatalogue.app",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.SCHEDULE_EXACT_ALARM"
      ]
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/pot_icon.png",
          "color": "#007AFF",
          "sounds": []
        }
      ]
    ],
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
